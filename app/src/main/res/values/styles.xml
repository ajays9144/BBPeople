<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorWhite</item>
    </style>

    <style name="BaseTheme.Toolbar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionMenuTextAppearance">@style/TextView.Title</item>
        <item name="android:actionMenuTextColor">@color/colorBitter</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="TextView.Title" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/ts_medium</item>
    </style>

    <style name="EditText.Border" parent="EditText">
        <item name="android:background">@drawable/ic_box_border</item>
    </style>

    <style name="Button">
        <item name="android:textSize">@dimen/ts_medium</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:background">@drawable/ic_btn_bg</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
